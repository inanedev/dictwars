<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/game_right_player"
        android:layout_below="@id/game_left_player"
        >

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/item_game_word_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="[17]"
                android:textSize="18sp"
                android:layout_toLeftOf="@id/item_game_usedword"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorAccent"

                />

            <TextView
                android:id="@+id/item_game_usedword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="АвторствО"
                android:layout_toLeftOf="@+id/item_game_user_ava"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:id="@+id/item_game_user_ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/girl_20"
                android:maxHeight="25dp"
                android:maxWidth="25dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
