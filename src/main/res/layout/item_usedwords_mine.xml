<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/game_left_player">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/item_game_user_ava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/boy_1"
                android:maxHeight="25dp"
                android:maxWidth="25dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"            />

            <TextView
                android:id="@+id/item_game_usedword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="АвокадО"
                android:layout_toRightOf="@+id/item_game_user_ava"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="10dp"
                />



            <TextView
                android:id="@+id/item_game_word_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="[12]"
                android:textSize="18sp"
                android:layout_toRightOf="@id/item_game_usedword"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"

                />

        </RelativeLayout>

</android.support.v7.widget.CardView>