<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/item_user_ava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boy_11"
            android:maxHeight="45dp"
            android:maxWidth="45dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"            />

        <TextView
            android:id="@+id/item_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Имя игрока"
            android:gravity="center"
            android:layout_toRightOf="@+id/item_user_ava"
            android:layout_toLeftOf="@+id/item_user_status"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_user_ava"
            android:layout_toStartOf="@+id/item_user_status" />

        <ImageView
            android:id="@+id/item_user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_online"
            android:maxHeight="25dp"
            android:maxWidth="25dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
           />

    </RelativeLayout>

</android.support.v7.widget.CardView>